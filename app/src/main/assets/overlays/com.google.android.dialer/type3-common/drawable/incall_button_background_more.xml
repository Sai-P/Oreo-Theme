<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_checked="true" android:drawable="@*com.google.android.dialer:drawable/incall_button_background_checked" />
            <item android:drawable="@*com.google.android.dialer:drawable/incall_button_background_unchecked" />
        </selector>
    </item>
    <item>
        <ripple android:color="#4dffffff">
            <item android:gravity="center" android:id="@*android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="@*android:color/button_material_dark" />
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <bitmap android:gravity="end" android:src="@*com.google.android.dialer:drawable/quantum_ic_arrow_drop_down_white_18" android:tint="@*com.google.android.dialer:color/incall_button_icon" />
    </item>
</layer-list>
